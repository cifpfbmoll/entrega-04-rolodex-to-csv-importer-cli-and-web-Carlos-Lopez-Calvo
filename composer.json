{
    "name": "your-name/rolodex-importer",
    "description": "CodeIgniter 4 CLI command for importing Rolodex contacts to CSV",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^7.4 || ^8.0",
        "codeigniter4/framework": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "post-update-cmd": [
            "@php spark cache:clear"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
